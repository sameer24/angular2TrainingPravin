{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "sourceMap": false,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib":[
            "es2015",
            "dom"
        ]
    },
    "files": [
      "app/app.module.ts",
      "app/main.ts"  
    ],
    "angularCompilerOptions":{
        "genDir":"aot",
        "skipMetadataEmit":true
    }
}